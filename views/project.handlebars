<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>

{{#each comments as |comment|}}
<li>{{text}}</li>
{{/each}}

<div class="row mt-4">
  <div class="col-md-6">

    <form class="form new-project-form">

      <div class="form-group">
        <label for="project-desc">comment:</label>
        <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
      </div>
      <div class="form-group">
        <input class="form-input" type="hidden" id='post_id' value='{{id}}' name="project-name" />
      </div>

      <div class="form-group">
        <button type="submit" id='comment-btn' class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
  <script src='/js/comment.js'></script>